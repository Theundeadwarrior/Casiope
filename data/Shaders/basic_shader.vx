#version 400


layout (location = 0) in vec3 position;
layout (location = 2) in vec2 inTexCoord;
out vec4 color;
out vec2 texCoord;

uniform mat4 model;
uniform mat4 view;
uniform mat4 projection;

void main () {
	gl_Position = projection * view * model *  vec4 (position, 1.0);
	color = vec4(position, 1.0) / 10.0;
	texCoord = inTexCoord;
}
